{
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:security/recommended"
  ],
  "plugins": [
    "security"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "require-jsdoc": [2, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }],
    "valid-jsdoc": [2, {
      "requireReturn": true,
      "requireReturnType": true
    }],
    "yoda": [1, "never"],
    "no-else-return": 2,
    "curly": 2,
    "padding-line-between-statements": [2, { "blankLine": "always", "prev": "*", "next": "return" }]
  }
}
